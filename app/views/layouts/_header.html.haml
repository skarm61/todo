.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "/"} TODO-list by Skarm
      - if signed_in?
        .btn-group.pull-right
          %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %i.icon-user
            = current_user.name
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Профиль", current_user, :method=>:get
            %li= link_to "Мои списки", lists_path
            %li.divider
            %li= link_to "Выйти", signout_path, :method => :delete
      - else
        = link_to "Войти", signin_path, :class=>"btn pull-right"
