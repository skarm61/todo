<!DOCTYPE html>
<html>
  <head>
    <title><%= @title%></title>
    <%= javascript_include_tag "application"%>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
      	<% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <table class="main_layout_table">
        	<tr>
        		<th class="left_panel"><%= render 'layouts/left_panel'%></th>
        		<th class="main_layout_table"><%= yield %></th>
        		<th class="right_panel"><%= render 'layouts/right_panel'%></th>
        	</tr>  
        </table>
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>